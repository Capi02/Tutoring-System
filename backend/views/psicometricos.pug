extends ./layout/index
block contenido
    section.container 
        .tab.mt-4.w-70-30
            .types_container 
                button.tablinks.active(onclick="openUserType(event, 'pensamientoAbstracto')") Pensamiento Abstracto
                button.tablinks(onclick="openUserType(event, 'tamizaje')") Tamizaje 
                //- button.tablinks(onclick="openUserType(event, 'tamizaje2')") Tamizaje 2 
                button.tablinks(onclick="openUserType(event, 'formasAprendizaje')") Formas de Aprendizaje
        #pensamientoAbstracto.tabcontent.active(style = "display:block;")
            .test_content
                form.test_form(method="POST" action="")
                    question_container 
                        each question in paQuestions
                            h4=question.questionText
                            each option, index in question.options
                                .answer_container
                                    input(type="radio" id=`option${index}` value=option name=question.id)
                                    label(for=`option_${index}`)=option    
                            
                            
                          
        #tamizaje.tabcontent
            h3 Test 2
        #tamizaje2.tabcontent
            h3 Test 2
        #formasAprendizaje.tabcontent
            h3 Test 3

        script. 
            function openUserType(evt, userType) {

            var i, tabcontent, tablinks;

            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(userType).style.display = "block";
            evt.currentTarget.className += " active";

            }
